generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(cuid())
  username         String?
  email            String?  @unique
  image            String?
  coins            Int      @default(450)
  isPremium        Boolean  @default(false)
  premiumEndsAt    DateTime?
  role             String?
  stripeCustomerId String?  @unique

  accounts      Account[]
  sessions      Session[]
  purchases     Purchase[]
  inventory     Inventory?
  wallet        Wallet?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Gamification
  xp            Int      @default(0)
  level         Int      @default(1)
  progress      UserProgress[]
  battlesAsP1   Battle[] @relation("Player1")
  battlesAsP2   Battle[] @relation("Player2")

  // Social
  posts         Post[]
  likes         Like[]
  comments      Comment[]
  stories       Story[]

  // Teams
  ownedProjects Project[] @relation("ProjectOwner")
  teamMemberships TeamMember[]

  // Wallet & Mentorship
  transactions    Transaction[]
  mentorSessions  MentorshipSession[] @relation("MentorSessions")
  studentSessions MentorshipSession[] @relation("StudentSessions")
  gigApplications GigApplication[]

  // Neural Profile (VAK)
  bio           String?
  skills        String?  // JSON string
  vakVisual     Int      @default(0)
  vakAuditory   Int      @default(0)
  vakKinesthetic Int     @default(0)
  learningStyle String?  // 'VISUAL', 'AUDITORY', 'KINESTHETIC'
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  user              User    @relation(fields: [userId], references: [id])
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  expires      DateTime
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

model Purchase {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  kind      String   // 'coins' | 'vip' | 'nft'
  ref       String?  // packId | priceId | nftId
  amount    Int      @default(0) // coins creditados
  createdAt DateTime @default(now())
}

model Inventory {
  id     String @id @default(cuid())
  user   User   @relation(fields: [userId], references: [id])
  userId String @unique
  nfts   NFT[]
}

model NFT {
  id          String    @id @default(cuid())
  tokenId     Int?
  name        String
  rarity      String
  price       Int
  owned       Boolean   @default(true)
  inventory   Inventory @relation(fields: [inventoryId], references: [id])
  inventoryId String
}

model Wallet {
  id        String  @id @default(cuid())
  user      User    @relation(fields: [userId], references: [id])
  userId    String  @unique
  address   String  @unique
}

// Hero's Journey & Gamification Models

model Content {
  id          String   @id @default(cuid())
  title       String
  type        String   // 'quiz', 'article', 'video', 'challenge'
  description String?
  body        String?
  xpReward    Int      @default(10)
  coinsReward Int      @default(5)
  createdAt   DateTime @default(now())
  progress    UserProgress[]
}

model UserProgress {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  contentId   String
  content     Content  @relation(fields: [contentId], references: [id])
  completed   Boolean  @default(false)
  completedAt DateTime?
  
  @@unique([userId, contentId])
}

model Battle {
  id        String   @id @default(cuid())
  player1Id String
  player1   User     @relation("Player1", fields: [player1Id], references: [id])
  player2Id String?
  player2   User?    @relation("Player2", fields: [player2Id], references: [id])
  winnerId  String?
  status    String   // 'pending', 'active', 'completed'
  createdAt DateTime @default(now())
}

// Social Features

model Post {
  id        String    @id @default(cuid())
  content   String
  imageUrl  String?
  authorId  String
  author    User      @relation(fields: [authorId], references: [id])
  likes     Like[]
  comments  Comment[]
  createdAt DateTime  @default(now())
}

model Like {
  id        String   @id @default(cuid())
  postId    String
  post      Post     @relation(fields: [postId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  
  @@unique([postId, userId])
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  postId    String
  post      Post     @relation(fields: [postId], references: [id])
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())
}

model Story {
  id        String   @id @default(cuid())
  imageUrl  String?
  content   String?
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  expiresAt DateTime
  createdAt DateTime @default(now())
}

// Team Match Features

model Project {
  id          String   @id @default(cuid())
  name        String
  description String
  tags        String   // Stored as JSON string "['React', 'Node']"
  ownerId     String
  owner       User     @relation("ProjectOwner", fields: [ownerId], references: [id])
  members     TeamMember[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TeamMember {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  role      String   // 'owner', 'member', 'pending'
  joinedAt  DateTime @default(now())
  
  @@unique([projectId, userId])
}

// Wallet & Earnings

model Transaction {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  amount    Float
  currency  String   // 'COIN', 'GEM', 'USD'
  type      String   // 'EARN', 'SPEND', 'WITHDRAW'
  description String
  createdAt DateTime @default(now())
}

model MentorshipSession {
  id        String   @id @default(cuid())
  mentorId  String
  mentor    User     @relation("MentorSessions", fields: [mentorId], references: [id])
  studentId String
  student   User     @relation("StudentSessions", fields: [studentId], references: [id])
  duration  Int?     // minutes
  cost      Float?
  status    String   @default("PENDING") // 'PENDING', 'ACTIVE', 'COMPLETED'
  createdAt DateTime @default(now())
}

// Trinity Gig Board

model Gig {
  id          String   @id @default(cuid())
  title       String
  description String
  reward      Int
  difficulty  String   // 'Easy', 'Medium', 'Hard'
  type        String   // 'Security', 'Frontend', 'Backend', etc.
  timeEstimate String
  status      String   @default("OPEN") // 'OPEN', 'CLOSED'
  
  applications GigApplication[]
  createdAt   DateTime @default(now())
}

model GigApplication {
  id        String   @id @default(cuid())
  gigId     String
  gig       Gig      @relation(fields: [gigId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  status    String   @default("PENDING") // 'PENDING', 'ACCEPTED', 'COMPLETED'
  createdAt DateTime @default(now())

  @@unique([gigId, userId])
}
